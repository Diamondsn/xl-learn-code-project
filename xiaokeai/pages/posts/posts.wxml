<import src="post-item/post-item-template.wxml" />
<view>
  <swiper class="user-swiper" indicator-dots='true' interval="2000" autoplay='true'>
    <swiper-item>
      <image class="user-image" src="/images/post/bl.png"></image>
    </swiper-item>
    <swiper-item>
      <image class="user-image" src="/images/post/cat.png"></image>
    </swiper-item>
    <swiper-item>
      <image class="user-image" src="/images/post/crab.png"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{post_data}}" wx:for-item="item" wx:for-index="index" wx:key="index">
  <view catch:tap="onPostTap" data-postId="{{item.postId}}">
    <template is="post-item" data="{{item}}"></template>
    </view>
  </block>
</view>