.user-swiper{
  width:100%;
  height:500rpx;
}

.user-image{
  width:100%;
  height: 500rpx;
}

.post-container{
  display:flex;
  flex-direction:column;
  margin-top:20rpx;
  margin-bottom:40rpx;
  background-color:white;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  padding-bottom:10rpx;
}

.container{
 height:100rpx;
 margin-top:10rpx;
 margin-bottom:20rpx;
 margin-left:10rpx;
 
}

.user-avatar{
  width:100rpx;
  height:100rpx;
  vertical-align: middle;
}

.user-time{
  font-size:26rpx;
  margin-left:20rpx;
  vertical-align: middle;
}

.post-title{
  font-size:34rpx;
  font-weight:bold;
  margin-bottom:10px;
  margin-left:10px;
  color:#333;
}

.post-img{
  width:100%;
  height: 500rpx;
}

.post-word{
  margin-top:15px;
  margin-left:10px;
  margin-bottom:10px;
  font-size:30rpx;
  color:#666;
}

.star-view{
  margin-left:10rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
}

.star,.view{
  width:32rpx;
  height:32rpx;
  margin-left:10px;
}

.post-like-num{
  font-size:28rpx;
  margin-left:10rpx;
}