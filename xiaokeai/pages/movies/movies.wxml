<!--pages/movies.wxml-->
<import src="movie-list/movie-list.wxml" />
<import src="movie-grid/movie-grid-template.wxml" />
<view class="search">
<icon class="search-img" type="search" size="13" color="#405f80"></icon>
<input type="text" placeholder="后来的我们" placehoold-class="placeholder" bindfocus="onBindFocus" bindchange="onBindChange" />
</view>

<view class="search-result" wx:if="{{searchResultShow}}">
<template is="movieGridTemplate">
</template>
</view>

<view class="container" wx:if="{{containerShow}}">
<view class="movies-template">
<template  is="movieListTemplate" data="{{...inTheaters}}" />
</view>
<view class="movies-template">
<template is="movieListTemplate" data="{{...comingSoon}}" />
</view>
<template is="movieListTemplate" data="{{...top250}}" />
</view>
